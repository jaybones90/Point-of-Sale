<h1><%= @product.name %></h1>

<p>
  <%= @product.description %>
</p>

<h3>$<%= @product.cost %></h3>


<form action="/product/<%= @product.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="edit-name">Update product name:</label><br>
  <input type="text" name="edit-name" id="edit-name"><br>
  <label for="edit-description">Update product description:</label><br>
  <input type="text" name="edit-description" id="edit-description"><br>
  <label for="edit-cost">Update product cost:</label><br>
  <input type="text" name="edit-cost" id="edit-cost"><br>
  <button type="submit">Submit</button>
</form>
<br>
<form action="/product/<%= @product.id %>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">Remove this item</button>
</form>
